[Unit]
Description=Voice Hotel Booking FastAPI
After=network.target

[Service]
Type=simple
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/Voice-Hotel-Booking/backend
Environment=PATH=/home/ubuntu/Voice-Hotel-Booking/backend/venv/bin
ExecStart=/home/ubuntu/Voice-Hotel-Booking/backend/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
